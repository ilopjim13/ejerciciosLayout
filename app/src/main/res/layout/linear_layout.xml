<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#DFCDDC39"
        android:layout_weight="1"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7AF44336"
            >


        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#77E91E63"
            >


        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7E9C27B0"
            >


        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7C673AB7"
            >

        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#813F51B5"
            >


        </View>
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#90F8E115"
        android:layout_weight="1"

    />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#8D2196F3"
            >


        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#8803A9F4"
            android:layout_weight="1">

        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#7E00BCD4"
            >


        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#7E009688"
            android:layout_weight="1">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#E91E63"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#673AB7"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:layout_weight="1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#009688"
                android:layout_weight="1"
                />


        </LinearLayout>
    </LinearLayout>




</LinearLayout>